generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
  moduleFormat    = "cjs"
}

datasource db {
  provider = "postgresql"
}


model Persona {
  dni    String  @id @db.VarChar(10)
  nombre String  @db.VarChar(20)
  clave  String  @db.VarChar(20)
  tfno   String  @db.VarChar(20)
  edad   Int     @default(18)

  rolesAsignados RolAsignado[]
}


model Rol {
  id          Int    @id @default(autoincrement())
  descripcion String @unique @db.VarChar(20)

  rolesAsignados RolAsignado[]
}


model RolAsignado {
  idra        Int     @id @default(autoincrement())

  dniPersona  String  @db.VarChar(10)
  rolId       Int

  persona     Persona @relation(fields: [dniPersona], references: [dni], onDelete: Cascade)
  rol         Rol      @relation(fields: [rolId], references: [id], onDelete: Cascade)

  @@unique([dniPersona, rolId]) // evita duplicados
}
